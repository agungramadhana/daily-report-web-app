@model DailyReport.Application.DetailUserModel;
@{
    ViewData["Title"] = "Detail User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-custom">
    <div class="card-header flex-wrap py-5">
        <div class="card-title">
            <h3 class="card-label">
                Detail User
            </h3>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 form-group">
                <label>Employee Number<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="employee-number" name="employeeNumber" placeholder="Employee Number" value="@Model.EmployeeNumber" disabled />
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 form-group">
                <label>Full Name<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="full-name" name="fullName" placeholder="Full Name" value="@Model.FullName" disabled />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 form-group">
                <label>Username<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="user-name" name="userName" placeholder="Username" value="@Model.UserName" disabled />
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 form-group">
                <label>Email Address<span class="text-danger">*</span></label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" value="@Model.Email" disabled />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 form-group">
                <label>Phone Number<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="phone-number" name="phoneNumber" placeholder="Phone Number" value="@Model.PhoneNumber" disabled />
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 form-group">
                <label>Address<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="address" name="address" placeholder="Address" value="@Model.Address" disabled />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 form-group">
                <label for="exampleSelect1">Role<span class="text-danger">*</span></label>
                @Html.DropDownList("userRole", (List<SelectListItem>)ViewBag.ListRole, new { @class = "form-control", @id = "user-role", @disabled = "disabled" })
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 form-group">
                <label for="exampleSelect1">Status<span class="text-danger">*</span></label>
                @Html.DropDownList("userStatus", (List<SelectListItem>)ViewBag.ActiveStatus, new { @class = "form-control", @id = "user-status", @disabled = "disabled" })
            </div>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-end">
        <a href="@Url.Action("Index", "User")" class="btn btn-secondary"><i class="fa fa-arrow-circle-left"></i>Back</a>
    </div>
</div>